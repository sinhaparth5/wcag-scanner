{
  "name": "wcag-scanner",
  "version": "1.2.60",
  "description": "Scan HTML for WCAG accessibility violations with AI-powered fix suggestions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "dist/pkg"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "wcag-scanner": "dist/cli/index.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc",
    "build:wasm": "cd scrapper && wasm-pack build --target nodejs --out-dir ../src/pkg",
    "copy:wasm": "mkdir -p dist/pkg && cp -r src/pkg/* dist/pkg/",
    "build": "npm run clean && npm run build:wasm && npm run build:ts && npm run copy:wasm",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.ts",
    "codecov": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sinhaparth5/wcag-scanner.git"
  },
  "keywords": [
    "accessibility",
    "wcag",
    "ally",
    "scanner"
  ],
  "author": "Parth Sinha",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/sinhaparth5/wcag-scanner/issues"
  },
  "homepage": "https://github.com/sinhaparth5/wcag-scanner#readme",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "codecov": "^3.8.2",
    "eslint": "^9.21.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.6",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "color-diff": "^1.4.0",
    "commander": "^13.1.0",
    "crypto": "^1.0.1",
    "express": "^4.21.2",
    "jsdom": "^26.0.0",
    "wcag-scanner": "^1.2.59"
  }
}
